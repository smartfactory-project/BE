<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.routing.mapper.StationMapper">

    <resultMap id="StationMap" type="com.example.demo.routing.model.Station">
        <result column="station_id"   property="stationId"/>
        <result column="line_id"      property="lineId"/>
        <result column="factory_id"   property="factoryId"/>
        <result column="process_type" property="processType"/>
        <result column="line_name"    property="lineName"/>
        <result column="station_name" property="stationName"/>
        <result column="station_type" property="stationType"/>
        <result column="station"      property="station"/>
    </resultMap>

    <select id="selectByLineAndFactory" resultMap="StationMap">
        SELECT station_id, line_id, factory_id, process_type,
        line_name, station_name, station_type, station
        FROM STATION
        WHERE line_id = #{lineId}
        AND factory_id = #{factoryId}
        ORDER BY station ASC
    </select>

</mapper>
